{
  "$schema": "https://biomejs.dev/schemas/1.3.3/schema.json",
  "javascript": {
    "globals": ["imports", "window", "workbench"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "recommended": false,
      "correctness": {
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error"
      },
      "style": {
        "noRestrictedGlobals": {
          "level": "error",
          "options": {
            "deniedGlobals": ["imports", "window"]
          }
        }
      }
    }
  }
}
