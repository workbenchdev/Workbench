using Gtk 4.0;
using Adw 1;

Adw.StatusPage {
  title: _("WebSocket Client");
  description: _("Connect to a WebSocket server");

  Box {
    orientation: vertical;
    halign: center;

    Entry entry_url {
      placeholder-text: "url";
      text: "wss://ws.postman-echo.com/raw";
      margin-bottom: 24;
    }

    Button button_connect {
      label: _("Connect");
      margin-bottom: 24;
    }

    Button button_disconnect {
      label: _("Disconnect");
      sensitive: false;
      margin-bottom: 24;
    }

    Box {
      Entry entry_message {
        margin-end: 12;
        hexpand: true;
        placeholder-text: "message";
        text: "Hello";
      }

      Button button_send {
        label: _("Send");
        sensitive: false;
      }

      margin-bottom: 30;
    }

    LinkButton {
      label: _("GJS Asynchronous Operations");
      uri: "https://gjs.guide/guides/gjs/asynchronous-programming.html#asynchronous-operations";
    }

    LinkButton {
      label: _("API Reference");
      uri: "https://libsoup.org/libsoup-3.0/class.WebsocketConnection.html";
    }
  }
}
