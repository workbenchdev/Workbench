using Gtk 4.0;
using Adw 1;

Adw.StatusPage {
  title: _("Center Box");
  description: _("Displays three child widgets, while keeping the middle centered");

  child: Box {
    spacing: 12;

    CenterBox {
      [start]
      Switch {
        valign: center;
      }

      [middle]
      CheckButton {}

      [end]
      Entry {

      }
    }

    LinkButton {
      label: "API Reference";
      uri: "https://docs.gtk.org/gtk4/class.CheckButton.html";
    }
  };
}
