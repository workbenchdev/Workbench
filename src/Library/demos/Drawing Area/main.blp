using Gtk 4.0;
using Adw 1;

Adw.StatusPage {
  title: "Drawing Area";
  description: _("Programmatically draw onto a surface.");

 Box {
    halign: center;
    orientation: vertical;

    DrawingArea drawing_area {
      content-width: 300;
      content-height: 300;
    }

    Scale scale {
      orientation: horizontal;
      width-request: 300;
      draw-value: true;
      adjustment: Gtk.Adjustment {
        lower: -25;
        upper: 25;
        value: 0;
      };
    }
  }
}
