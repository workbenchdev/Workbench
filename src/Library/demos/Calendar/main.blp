using Gtk 4.0;
using Adw 1;

Adw.StatusPage {
  title: _("Calendar");
  description: "Display a Gregorian calendar, one month at a time";

  Box {
    orientation: vertical;
    halign: center;

    Calendar calendar {
      show-day-names: true;
      show-week-numbers: false;
      show-heading: true;
      margin-bottom: 18;
      day: 1;
    }

    LinkButton {
      label: _("API Reference");
      uri: "https://docs.gtk.org/gtk4/class.Calendar.html";
    }
  }
}
