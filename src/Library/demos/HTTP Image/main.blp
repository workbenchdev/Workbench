using Gtk 4.0;
using Adw 1;

Adw.StatusPage {
  title: _("HTTP Image");
  description: _("Load and display an image from an HTTP URL.");
  valign: start;

  Box {
    orientation: vertical;

    Picture picture {
      halign: center;
      valign: center;
      can-shrink: true;
      content-fit: scale_down;
      margin-bottom: 30;
    }
  }
}
