using Gtk 4.0;
using Adw 1;

Adw.StatusPage {
  title: "Email";
  description: _("Compose an email");
  margin-top: 48;

  Box {
    orientation: vertical;
    halign: center;

    Button button {
      label: _("Send Email");
      margin-bottom: 42;
      halign: center;
      styles ["suggested-action"]
    }

    LinkButton {
      label: "API Reference";
      uri: "https://libportal.org/method.Portal.compose_email.html";
    }
  }
}
