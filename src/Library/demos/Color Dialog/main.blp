using Gtk 4.0;
using Adw 1;

Adw.StatusPage {
  title: "Color Dialog";
  description: _("Show a dialog to select a color");

  Box {
    orientation: vertical;
    halign: center;
    spacing:42;

    Box{
      orientation:vertical;

      ColorDialogButton color_dialog_button {
        halign: center;
        margin-bottom:12;
      }
      Label {
        label: _("Color Dialog Button");
        margin-bottom:12 ;
      }

      LinkButton {
        label: "API Reference";
        uri: "https://docs.gtk.org/gtk4/class.ColorDialogButton.html";
      }
    }

    Box{
      orientation: vertical;

      Button custom_button {
        label: _("Select Colorâ€¦");
        margin-bottom:12;
        styles ["pill"]
      }

      Label {
        label: _("Custom Button");
        margin-bottom:12 ;
      }

      LinkButton {
        label: "API Reference";
        uri: "https://docs.gtk.org/gtk4/class.ColorDialog.html";
      }
    }
  }
}
