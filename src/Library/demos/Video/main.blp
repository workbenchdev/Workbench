using Gtk 4.0;
using Adw 1;

Adw.StatusPage page {
  title: _("Video");
  description: _("Display video with media controls");

  Box {
    orientation: vertical;
    halign: center;

    Video video {
      autoplay: true;
      loop: true;
      width-request: 540;
      height-request: 540;
    }

    LinkButton {
      label: _("API Reference");
      uri: "https://docs.gtk.org/gtk4/class.Video.html";
      margin-top: 12;
    }
  }
}

