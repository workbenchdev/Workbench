{
  "formatter": {
    "enabled": true,
    "ignore": ["src/lib", "troll"],
    "indentStyle": "space",
    "indentSize": 2
  },
  "linter": {
    "enabled": true,
    "ignore": ["src/lib", "troll"],
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "off",
        "noParameterAssign": "off"
      },
      "correctness": {
        "noInvalidConstructorSuper": "off"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
